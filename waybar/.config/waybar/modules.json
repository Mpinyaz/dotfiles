{
  "hyprland/workspaces": {
    "on-click": "activate",
    "active-only": false,
    "disable-scroll": false,
    "on-scroll-up": "hyprctl dispatch workspace -1",
    "on-scroll-down": "hyprctl dispatch workspace +1",
    "format": "{id} <span font='20px'>{icon}</span> ",
    "show-special": true,
    "persistent-workspaces": {
      "*": [1, 2, 3]
    },
    "format-icons": {
      "1:web": "Ôí™",
      "2:code": "Ôí™",
      "3:term": "Ôí™",
      "4": "Ôí™",
      "5": "Ôí™",
      "6": "Ôí™",
      "7": "Ôí™",
      "8": "Ôí™",
      "9": "Ôí™",
      "active": "ÔÜí",
      "default": "ÔÑë"
    }
  },
  "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 14,
    "icon-theme": "Numix-Circle",
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close",
    "ignore-list": ["Alacritty"],
    "app_ids-mapping": {
      "firefoxdeveloperedition": "firefox-developer-edition"
    },
    "rewrite": {
      "Firefox Web Browser": "Firefox",
      "Foot Server": "Terminal"
    }
  },

  "hyprland/window": {
    "format": "{class}",
    "on-click": "rofi -show drun -replace",
    "rewrite": {
      "(.*) - Mozilla Firefox": "üåé $1",
      "org.telegram.desktop": "> [$1]",
      "org.gnome.Nautilus": "> [$1]",
      "(.*) - zsh": "> [$1]"
    },
    "separate-outputs": true
  },
  "custom/notification": {
    "format": "{icon}",
    "format-icons": {
      "notification": "<span rise='8pt'>ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span></span>",
      "none": "ÔÇ¢",
      "dnd-notification": "<span rise='8pt'>ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span></span>",
      "dnd-none": "Ôá∑ ",
      "inhibited-notification": "<span rise='8pt'>ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span></span>",
      "inhibited-none": "ÔÇ¢",
      "dnd-inhibited-notification": "<span rise='8pt'>Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span></span>",
      "dnd-inhibited-none": "Ôá∑ "
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },
  "custom/appmenu": {
    "format": "Apps",
    "tooltip-format": "Left: Open the application launcher\nRight: Show all keybindings",
    "on-click": "rofi -show drun -replace",
    "tooltip": false
  },

  "custom/exit": {
    "format": "ÔÄë",
    "tooltip-format": "Powermenu",
    "on-click": "wlogout -b 4",
    "tooltip": false
  },

  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "ÔÄ£",
      "unlocked": "ÔÇú"
    }
  },
  "tray": {
    "icon-size": 17,
    "spacing": 6
  },
  "custom/clipboard": {
    "interval": 5,
    "tooltip": true,
    "on-click": "sh -c 'cliphist list | rofi -dmenu | cliphist decode | wl-copy'"
  },
  "custom/weather": {
    "format": "{}",
    "return-type": "json",
    "exec": "~/.config/waybar/scripts/weather.sh",
    "interval": 10,
    "on-click": "firefox https://wttr.in"
  },
  "clock": {
    "format": "ÔÄó {:%H:%M}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "format-alt": "{:%Y-%m-%d}",
    "actions": {
      "on-click-right": "mode",
      "on-click-forward": "tz_up",
      "on-click-backward": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },
  "custom/colorpicker": {
    "format": "{}",
    "return-type": "json",
    "interval": "once",
    "exec": "~/.config/waybar/scripts/colorpicker.sh -j",
    "on-click": "sleep 1 && ~/.config/waybar/scripts/colorpicker.sh"
  },
  "custom/system": {
    "format": "<span font='20px' color='#ff6699'>Ó≠í</span>",
    "tooltip": false
  },
  "custom/power-profile": {
    "exec": "~/.config/waybar/scripts/powerprofile.sh",
    "return-type": "json",
    "interval": 5,
    "on-click": "~/.config/waybar/scripts/power-profile-toggle.sh",
    "on-click-right": "~/.config/waybar/scripts/power-profile-menu.sh menu",
    "format": "{}",
    "tooltip": true
  },
  "backlight": {
    "device": "intel_backlight",
    "format": "{icon} {percent}%",
    "format-icons": ["ÔÑë", "ÔÜÖ"]
  },
  "memory": {
    "format": "Óâ¶ {percentage}%",
    "tooltip": true,
    "tooltip-format": "{used:0.2f}G/{total:0.2f}G",
    "on-click": "ghostty -e htop"
  },
  "cpu": {
    "format": "Ó∫ú {usage}%",
    "interval": 1,
    "tooltip": true,
    "format-icons": ["‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà"],
    "on-click": "ghostty -e htop"
  },

  "disk": {
    "interval": 30,
    "format": "ÔáÄ {percentage_used}%",
    "path": "/",
    "on-click": "ghostty -e htop"
  },
  "temperature": {
    "format": "Ôãâ {temperatureC}¬∞C",
    "format-critical": "Ôãá {temperatureC}¬∞C",
    "interval": 1,
    "critical-threshold": 80,
    "on-click": "foot btop"
  },
  "custom/powerDraw": {
    "format": "{}",
    "interval": 1,
    "exec": "~/.config/waybar/scripts/powerdraw.sh",
    "return-type": "json"
  },
  "custom/updates": {
    "format": "{}",
    "interval": 60,
    "exec": "~/.config/waybar/scripts/checkupdate.sh",
    "return-type": "json",
    "exec-if": "exit 0"
  },
  "hyprland/language": {
    "format": "/ K {short}"
  },

  "group/hardware": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 300,
      "transition-left-to-right": true
    },
    "modules": ["custom/system", "disk", "cpu", "memory"]
  },
  "group/brightness": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 300,
      "transition-left-to-right": false
    },
    "modules": ["backlight", "backlight/slider"]
  },
  "group/connect": {
    "orientation": "horizontal",
    "modules": ["group/networking", "bluetooth"]
  },
  "group/powerstatus": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 300,
      "transition-left-to-right": false
    },
    "modules": ["battery", "custom/power-profile"]
  },
  "network": {
    "format-wifi": "Ôá´ ",
    "format-ethernet": "Û∞àÄ",
    "format-disconnected": "Û±êÖ",
    "tooltip-format": "{ipaddr}",
    "tooltip-format-wifi": "Ôá´ {essid} ({signalStrength}%)\n {ipaddr}",
    "tooltip-format-ethernet": "{ifname} Û∞àÄ | {ipaddr}",
    "on-click": "ghostty -e nmtui"
  },
  "network#speed": {
    "format": "{bandwidthDownBits}",
    "interval": 1,
    "tooltip-format": "{ipaddr}",
    "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´  \n{ipaddr} | {frequency} MHz{icon} ",
    "tooltip-format-ethernet": "{ifname} Û∞àÄ \n{ipaddr} | {frequency} MHz{icon} ",
    "tooltip-format-disconnected": "Not Connected to any type of Network",
    "tooltip": true,
    "on-click": "pgrep -x rofi &>/dev/null && notify-send rofi || networkmanager_dmenu"
  },

  "battery": {
    "interval": 1,
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 20
    },
    "format": "{icon} {capacity}% ",
    "format-time": "{H}h {M}min",
    "tooltip": "{time}",
    "format-charging": "{icon} {capacity}%",
    "format-plugged": "{capacity}% Û∞††",
    "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"],
    "on-click": "~/.config/rofi/scripts/powermenu.sh"
  },
  "backlight/slider": {
    "min": 0,
    "max": 100,
    "orientation": "horizontal",
    "device": "intel_backlight"
  },
  "mpd": {
    "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) <U+F001>",
    "format-disconnected": "Disconnected <U+F001>",
    "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped <U+F001>",
    "interval": 2,
    "consume-icons": {
      "on": "<U+F0C4> "
    },
    "random-icons": {
      "off": "<span color=\"#f53c3c\"><U+F074></span> ",
      "on": "<U+F074> "
    },
    "repeat-icons": {
      "on": "<U+F01E> "
    },
    "single-icons": {
      "on": "<U+F01E>1 "
    },
    "state-icons": {
      "paused": "<U+F04C>",
      "playing": "<U+F04B>"
    },
    "tooltip-format": "MPD (connected)",
    "tooltip-format-disconnected": "MPD (disconnected)"
  },
  "pulseaudio": {
    "format": "{icon}{volume}% ",
    "format-muted": "<span color='#FF4040'> Û∞ñÅ </span>0% ",
    "format-icons": {
      "headphone": "<span color='#BF00FF'> ÔÄ• </span>",
      "hands-free": "<span color='#BF00FF'> ÔÄ• </span>",
      "headset": "<span color='#BF00FF'> ÔÄ• </span>",
      "phone": "<span color='#00FFFF'> ÔÇï </span>",
      "portable": "<span color='#00FFFF'> ÔÇï </span>",
      "car": "<span color='#FFA500'> ÔÜπ </span>",
      "default": [
        "<span color='#808080'>ÔÄ¶</span>",
        "<span color='#FFFF66'>ÔÄß</span>",
        "<span color='#00FF7F'>ÔÄ® </span>"
      ]
    },
    "scroll-step": 5,
    "on-click": "pactl -- set-sink-mute 0 toggle",
    "on-click-right": "pavucontrol",
    "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +5%",
    "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -5%"
  },
  "pulseaudio#mic": {
    "format": "{format_source}",
    "format-source": "Ó∞ú",
    "format-source-muted": "ÔÑ±",
    "tooltip-format": "{volume}% {format_source} ",
    "on-click": "pactl set-source-mute 0 toggle",
    "on-scroll-down": "pactl set-source-volume 0 -1%",
    "on-scroll-up": "pactl set-source-volume 0 +1%"
  },
  "group/audio": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 500,
      "transition-left-to-right": false
    },
    "modules": ["pulseaudio", "pulseaudio/slider"]
  },
  "pulseaudio/slider": {
    "min": 0,
    "max": 140,
    "orientation": "horizontal"
  },
  "custom/hotspot": {
    "format": "{icon}",
    "interval": 1,
    "tooltip": true,
    "return-type": "json",
    "format-icons": {
      "active": "Û±ú†",
      "notactive": "Û±ú°"
    },
    "exec": "waybar-hotspot -a watch",
    "on-click": "waybar-hotspot -a toggle"
  },
  "bluetooth": {
    "format-on": "Û∞Ç∞",
    "format-off": "",
    "format-disabled": "Û∞Ç≤",
    "format-connected": "Û∞Ç¥ ",
    "format-connected-battery": "{device_battery_percentage}% Û∞Ç¥",
    "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
    "on-click": "blueman-manager"
  },
  "idle_inhibitor": {
    "format": "  {icon}  ",
    "format-icons": {
      "activated": "Û∞æ™",
      "deactivated": "Û∞Ö∂"
    }
  },
  "group/networking": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 500,
      "transition-left-to-right": false
    },
    "modules": ["network", "network#speed"]
  }
}
